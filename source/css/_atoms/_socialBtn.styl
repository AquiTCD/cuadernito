.socialBtns_item
  align-self: stretch
  text-align: center
  flex-grow: 1
  padding-top: 8px
  padding-bottom: 8px
  border-right: 1px solid $black-base
  // :not(:last-child) can not be used, because of media-query
  &:last-child
    border-right: none
  amp-social-share
    display: block
    margin: auto
    // width:33px
    &[type=tumblr]
      color: $ssc.Tumblr
      background: $white-base url( 'https://cdnjs.cloudflare.com/ajax/libs/simple-icons/3.0.1/tumblr.svg' )
    &[type=hateb]
      color: $ssc.Hatena_Bookmark
      background: $white-base url( 'https://cdnjs.cloudflare.com/ajax/libs/simple-icons/3.0.1/hatenabookmark.svg' )
    &[type=twitter]
      color: $ssc.Twitter
      background: $white-base url( 'https://cdnjs.cloudflare.com/ajax/libs/simple-icons/3.0.1/twitter.svg' )
    &[type=facebook]
      color: $ssc.Facebook
      background: $white-base url( 'https://cdnjs.cloudflare.com/ajax/libs/simple-icons/3.0.1/facebook.svg' )
    &[type=line]
      color: $ssc.Line
      background: $white-base url( 'https://cdnjs.cloudflare.com/ajax/libs/simple-icons/3.0.1/line.svg' )
    &[type=pocket]
      color: $ssc.Pocket
      background: $white-base url( 'https://cdnjs.cloudflare.com/ajax/libs/simple-icons/3.0.1/pocket.svg' )
